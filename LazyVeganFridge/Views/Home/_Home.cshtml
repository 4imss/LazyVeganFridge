@model LazyVeganFridge.ViewModels.IngredientCreateEdit

<div class="row">
    <div class="colLeft">
        <img  class="imgCake" src=@Url.Content("~/Content/img/veganCake.png") />

        <h2 class="leftH2">Categories</h2>
        @using (Html.BeginForm("search", "Home", FormMethod.Post, new { }))
        {
            @Html.AntiForgeryToken()
            <div id="accordion">
                <div class="card">
                    @*Looping through categories and showing it on home page*@
                    @foreach (var cat in Model.Categories)
                    {
                        <div class="card-header" id="headingOne">
                            <h5 class="mb-0">

                                <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    @Html.DisplayFor(modelItem => cat.Name)
                                </button>
                            </h5>
                        </div>
                        @* Looping through ingredients that belong to the right category and showing those ingredients *@
                        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                            <div class="form-check form-check-inline card-body groupedIngredients">
                                @foreach (var ing in Model.FridgeIngredient[cat.Id])
                                {
                                    <label class="form-check-label ingredients" for="inlineCheckbox1">@Html.DisplayFor(modelItem => ing.Name)</label>
                                    <input class="form-check-input" type="checkbox" id="inlineCheckbox1" name="@ing.Id">
                                }
                            </div>
                        </div>
                    }
                </div>

            </div>


            <input class="btn-ing" type="submit" value="search" />

        }
    </div>


    <div class="col-12 col-md-8 colRight">
        <h3>Select The Ingredients You Have!</h3>

        <img class="imgs" src=@Url.Content("~/Content/img/1.jpeg") />
        <img class="imgs" src=@Url.Content("~/Content/img/2.jpg")  />
        <img class="imgs" src=@Url.Content("~/Content/img/3.jpg")  />
        <img class="imgs" src=@Url.Content("~/Content/img/4.jpg")  />
        <img class="imgs" src=@Url.Content("~/Content/img/5.jpg")  />
        <img class="imgs" src=@Url.Content("~/Content/img/1.jpeg")  />
    </div>
</div>